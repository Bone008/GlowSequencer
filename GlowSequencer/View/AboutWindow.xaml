<Window x:Class="GlowSequencer.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Glow Sequencer" Height="140" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        KeyDown="Window_KeyDown" Icon="/GlowSequencer;component/Resources/icon.ico" ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Width="64" Height="64" VerticalAlignment="Top" HorizontalAlignment="Left"
               Source="/GlowSequencer;component/Resources/program_icon_64.png" />

        <TextBlock Grid.Column="1" LineStackingStrategy="BlockLineHeight" LineHeight="28">
            <Run FontSize="20" FontWeight="Bold">Glow Sequencer</Run><LineBreak/>
            <Run x:Name="versionText" Text="unknown version"/><LineBreak/>
            <Run>Copyright &#169; 2016 Lukas Bonauer</Run>
        </TextBlock>
    </Grid>
</Window>
