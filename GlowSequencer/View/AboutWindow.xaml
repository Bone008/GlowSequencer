<Window x:Class="GlowSequencer.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Glow Sequencer" Height="140" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        KeyDown="Window_KeyDown" Icon="/GlowSequencer;component/Resources/icon.ico">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Width="64" Height="64" BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Icon</TextBlock>
        </Border>

        <TextBlock Grid.Column="1" LineStackingStrategy="BlockLineHeight" LineHeight="28">
            <Run FontSize="20" FontWeight="Bold">Glow Sequencer</Run><LineBreak/>
            <Run x:Name="versionText" Text="unknown version"/><LineBreak/>
            <Run>Copyright &#169; 2015 Lukas Bonauer</Run>
        </TextBlock>
    </Grid>
</Window>
