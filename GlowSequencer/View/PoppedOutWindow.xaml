<Window x:Class="GlowSequencer.View.PoppedOutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlowSequencer.View"
        mc:Ignorable="d"
        Title="Block properties" ShowInTaskbar="False">
    <Grid>
        <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource GenericProperties}"
                          Visibility="{Binding IsActive, Converter={StaticResource conv_BoolToVisibility}, ConverterParameter=nocollapse}" />
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Width="30" Height="30" FontSize="7"
                    Click="ButtonPopIn_Click">Pop in</Button>
    </Grid>
</Window>
