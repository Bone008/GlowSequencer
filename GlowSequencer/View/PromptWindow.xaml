<Window x:Class="GlowSequencer.View.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="400" WindowStartupLocation="CenterOwner" SizeToContent="Height"
        Loaded="Window_Loaded" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <TextBox x:FieldModifier="private" x:Name="promptTextBox" Text="TextBox" Margin="5"/>
        <Button Content="OK" Grid.Column="1" Margin="5" IsDefault="True" Click="Button_Click"/>
        <Button Content="Cancel" Grid.Column="2" Margin="5" IsCancel="True"/>

    </Grid>
</Window>
