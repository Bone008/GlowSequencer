<Window x:Class="GlowSequencer.View.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transfer to equipment" Width="600" SizeToContent="Height">
    <!--<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="320.8"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>-->

    <StackPanel Orientation="Vertical" Margin="10">
        <Label Padding="0,5">Path to Aerotech Glo-Ultimate App:</Label>
        <DockPanel>
            <Button DockPanel.Dock="Right" Content="Browse ..." Padding="10,0" Margin="5,0" />
            <TextBox Text="" />
        </DockPanel>

        <TextBlock TextWrapping="Wrap" Margin="0,10">
            <Run>The necessary *.glo files will be automatically generated into a subdirectory of the Aerotech program.</Run>
            <LineBreak />
            <Run>Make sure that you have write access to above directory.</Run>
        </TextBlock>

        <Label Padding="0,5">Transferred tracks:</Label>
        <ListBox SelectionMode="Extended">
            <ListBoxItem>Track 01</ListBoxItem>
            <ListBoxItem>Track 02</ListBoxItem>
            <ListBoxItem>Track 03</ListBoxItem>
        </ListBox>

        <Expander Header="Advanced settings" Margin="0,10">
            <StackPanel Orientation="Vertical">
                <Label>TODO</Label>
            </StackPanel>
        </Expander>

        <TextBlock HorizontalAlignment="Right">All equipment has to be connected to the computer before starting the transfer.</TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10" Height="30">
            <Button Content="Cancel" Margin="10,0" Padding="20,0" Click="Cancel_Click" />
            <Button Content="Start" Padding="20,0" Click="Start_Click" />
        </StackPanel>

        <Label>Log:</Label>
        <TextBox IsReadOnly="True" Height="100" />
    </StackPanel>

    <!--<StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10.2,-0.4,10.4">
            <Button Content="Cancel" Padding="20,0" />
            <Button Content="Start" Margin="10,0" Padding="20,0" />
        </StackPanel>-->

    <!--</Grid>-->
</Window>
